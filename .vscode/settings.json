{
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.renderWhitespace": "boundary",
  "files.encoding": "utf8",
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "search.exclude": {
    "dist/**": true,
    "node_modules/**": true,
    "typings/**": true
  },
  "tslint.exclude": [
    "**/src/lib/**/*.ts",
    "**/src/snippets/**/*.ts"
  ],
  "typescript.tsdk": "./node_modules/typescript/lib",
  "[json]": {
    "editor.formatOnSave": true
  },
  "[javascript]": {
    "editor.formatOnSave": true
  },
  "[typescript]": {
    "editor.formatOnSave": true
  }
}
